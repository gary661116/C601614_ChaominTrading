@{
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
    ViewBag.BodyClass = "Login";
    ViewBag.IsFirstPage = true;
}

@section IncludeCSS{

}
@section IncludeScript{
    // Google reCaptcha 驗證工具
    <script src='https://www.google.com/recaptcha/api.js'></script>
}

<h1 class="logo">
    <span class="name text-danger">@Resources.Res.System_Name</span>Web Manager
</h1>
<p class="copyright text-primary">@Resources.Res.System_Name_En &copy; 2016</p>

<div class="login-box">

    <form class="form form-sm">

        <div class="form-group">
            <h3 class="h3">System Login</h3>
        </div>

        <div class="form-group">
            <label>帳號 Username</label>
            <input type="text" class="form-control" placeholder="帳號">
        </div>

        <div class="form-group">
            <label>密碼 Password</label>
            <input type="password" class="form-control">
        </div>

        <div class="form-group">
            <label>驗證碼 Code</label>

            @* Google reCaptcha 驗證工具 *@
            <div class="g-recaptcha" data-sitekey="6LcePAATAAAAAGPRWgx90814DTjgt5sXnNbV5WaW"></div>

        </div>

        <div class="form-group form-action text-xs-center">
            <button type="button" class="btn btn-sm btn-info" onclick="location.href='../NewsData'">登入 LOGIN</button>
        </div>

    </form>

</div>