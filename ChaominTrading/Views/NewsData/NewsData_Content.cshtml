@{
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
    ViewBag.BodyClass = "NewsData";
    ViewBag.IsFirstPage = false;
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><i class="fa-caret-right"></i> 網站資料管理</li>
        <li><i class="fa-angle-right"></i> 最新消息資料維護</li>
    </ul>
}

<h3 class="h3">最新消息資料維護<small class="sub"><i class="fa-angle-double-right"></i> 編輯</small></h3>

<form class="form form-sm">
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 發佈日期
        </label>
        <div class="col-xs-7">
            @* 自動帶入 今天日期 *@
            <input type="date" class="form-control" value="2016-01-01" placeholder="yyyy-mm-dd">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 語系
        </label>
        <div class="col-xs-7">
            <select class="form-control">
                <option value="zh-TW">中文</option>
                <option value="en-US">英文</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 狀態
        </label>
        <div class="col-xs-2">
            <label class="c-input c-radio">
                <input type="radio" checked>
                <span class="c-indicator"></span>
                <span class="text-sm">顯示</span>
            </label>
            <label class="c-input c-radio">
                <input type="radio">
                <span class="c-indicator"></span>
                <span class="text-sm">隱藏</span>
            </label>
        </div>
        <label class="col-xs-1 form-control-label text-xs-right">
            排序
        </label>
        <div class="col-xs-4">
            @* 如未輸入 自動帶入 0 *@
            <input type="text" class="form-control" placeholder="請輸入數字...">
        </div>
        <small class="col-xs-4 text-muted">數字愈大愈前面</small> @* 說明文字 *@
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 消息標題
        </label>
        <div class="col-xs-7">
            <input type="text" class="form-control" placeholder="請輸入最新消息標題...">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 消息內容
        </label>
        <div class="col-xs-7">
            <textarea rows="5" class="form-control" placeholder="請輸入最新消息內容..."></textarea>
        </div>
    </div>
    <div class="form-action">
        <button type="button" class="btn btn-primary btn-sm col-xs-offset-1" onclick="location.href='../NewsData'">
            <i class="fa-check"></i> 存檔確認
        </button>
        <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='../NewsData'">
            <i class="fa-times"></i> 回列表
        </button>
    </div>
</form>