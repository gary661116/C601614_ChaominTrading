@{
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
    ViewBag.BodyClass = "ProductsData";
    ViewBag.IsFirstPage = false;
}

@section Breadcrumb {
    <ul class="breadcrumb">
        <li><i class="fa-caret-right"></i> 網站資料管理</li>
        <li><i class="fa-angle-right"></i> 產品資料維護</li>
    </ul>
}

<h3 class="h3">產品資料維護<small class="sub"><i class="fa-angle-double-right"></i> 編輯</small></h3>

<form class="form form-sm">
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 語系
        </label>
        <div class="col-xs-7">
            <select class="form-control">
                <option value="zh-TW">中文</option>
                <option value="en-US">英文</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 產品編號
        </label>
        <div class="col-xs-7">
            <input type="text" class="form-control" placeholder="請輸入產品編號...">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 產品名稱
        </label>
        <div class="col-xs-7">
            <input type="text" class="form-control" placeholder="請輸入產品名稱...">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            產地
        </label>
        <div class="col-xs-3">
            <input type="text" class="form-control" placeholder="請輸入產地...">
        </div>
        <label class="col-xs-1 form-control-label text-xs-right">
            產季
        </label>
        <div class="col-xs-3">
            <input type="text" class="form-control" placeholder="請輸入產季...">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            規格
        </label>
        <div class="col-xs-7">
            <input type="text" class="form-control" placeholder="請輸入規格...">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 狀態
        </label>
        <div class="col-xs-2">
            <label class="c-input c-radio">
                <input type="radio" checked>
                <span class="c-indicator"></span>
                <span class="text-sm">上架</span>
            </label>
            <label class="c-input c-radio">
                <input type="radio">
                <span class="c-indicator"></span>
                <span class="text-sm">下架</span>
            </label>
        </div>
        <label class="col-xs-1 form-control-label text-xs-right">
            排序
        </label>
        <div class="col-xs-4">
            @* 如未輸入 自動帶入 0 *@
            <input type="text" class="form-control" placeholder="請輸入數字...">
        </div>
        <small class="col-xs-4 text-muted">數字愈大愈前面</small> @* 說明文字 *@
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">代表圖</label>
        <div class="col-xs-7">
            @* 瀏覽&上傳檔案 *@
            <div class="form-control">
                <input type="file">
            </div>
            @* 照片縮圖 *@
            <ol class="upload-img list-inline">
                <li>
                    <button class="close">&times;</button> @* 刪除圖片的按鈕 *@
                    <img src="" alt="">
                </li>
            </ol>
        </div>
        <small class="col-xs-4 text-muted">可上傳 1 張照片，檔案大小不可超過 xxx KB</small>
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 產品簡介
        </label>
        <div class="col-xs-7">
            @* 純文字 *@
            <textarea class="form-control" placeholder="請輸入產品簡介..." rows="5"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-xs-1 form-control-label text-xs-right">
            <span class="text-danger">*</span> 產品介紹
        </label>
        <div class="col-xs-7">
            @* 編輯器 ex. ckeditor *@
            <textarea class="form-control" rows="5"></textarea>
        </div>
    </div>
    <div class="form-action">
        <button type="button" class="btn btn-primary btn-sm col-xs-offset-1" onclick="location.href='../ProductsData'">
            <i class="fa-check"></i> 存檔確認
        </button>
        <button type="button" class="btn btn-secondary btn-sm" onclick="location.href='../ProductsData'">
            <i class="fa-times"></i> 回列表
        </button>
    </div>
</form>